#include <stdio.h>     // подключаем основную библиотеку
#include <math.h>       // подключаем библиотеку для 


int main()      // объявляем основную функцию
{
    float a, b, c, p, s;      // объявляем переменные

    //Вводим длины сторон треугольника с консоли
    printf_s("Enter the lengths of the sides of the triangle:\n");      // Просим ввести значения длин сторон треугольника с консоли
    scanf_s("%f", &a);      // Вводим с консоли сторону а
    scanf_s("%f", &b);      // Вводим с консоли сторону b
    scanf_s("%f", &c);      // Вводим с консоли сторону c

    p = (a + b + c) / 2;     // вычисляем полупириметр треугольника
    s = powf(p * (p - a) * (p - b) * (p - c), 1.0 / 2.0);      // вычисляем площадь треугольника по формуле Герона

    printf_s("Squer of triangle = %f", s);    // Выводим конечный результат площади треугольника

    return 0;
}
